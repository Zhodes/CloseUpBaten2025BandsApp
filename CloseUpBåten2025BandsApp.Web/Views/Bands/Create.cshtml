@model CreateVM
@{
    ViewBag.Title = "Add Band";
}

<h2>Add a Band</h2>

<form asp-controller="Band" asp-action="Create">
    <label asp-for="Name"></label>
    <input asp-for="Name" />
    <span asp-validation-for="Name"></span>

    <label asp-for="Description"></label>
    <input asp-for="Description" />
    <span asp-validation-for="Description"></span>
    <br />

    <label asp-for="PerformanceTime"></label>
    <input type="datetime-local"
           asp-for="PerformanceTime"
           min="@CloseUpBåten2025BandsApp.Web.Models.PerformanceTimeLimits.MinTime.ToString("yyyy-MM-ddTHH:mm")"
           max="@CloseUpBåten2025BandsApp.Web.Models.PerformanceTimeLimits.MaxTime.ToString("yyyy-MM-ddTHH:mm")"
           style="width: 300px;" />
    <span asp-validatrion-for="PerformanceTime"></span>

    <input type="submit" style="width: 300px;" value="Save" />
</form>
@if (ViewData.ModelState.ErrorCount > 0)
{
    <div asp-validation-summary="All">
        <ul>
        </ul>
    </div>
}
